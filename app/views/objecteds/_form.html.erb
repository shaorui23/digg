<%= form_for @zset, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Redis List</legend>

    <div class="control-group">
      <%= f.label "key", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label "Score", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :score, :class => 'text_field', :placeholder => "请输入数字", :onKeypress => "return (/[0-9.]/.test(String.fromCharCode(event.keyCode)))" %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label "Value", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_area :redis_value, :class => 'text_area', :placeholder => "以逗号分割" %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', objecteds_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>

