<h1>Redis Hash</h1>

<fieldset>
  <dl>
    <dt class="key_field label string_type"><label>Key<dd><pre class="prettyprint"><%= @redishash.redis_key %></dd></pre></label></dt>
    <dt class="value_field label string_type"><label>Value<dd><pre class="prettyprint"><%= @redishash.redis_value %></dd></pre></label></dt>
    <dt class="value_field label string_type"><label>Type<dd><pre class="prettyprint"><%= @redishash.redis_type %></dd></pre></label></dt>
    <dt class="value_field label string_type"><label>Size<dd><pre class="prettyprint"><%= @redishash.redis_value.size %></dd></pre></label></dt>
    <dt class="value_field label string_type"><label>TTL<dd><pre class="prettyprint"><%= @redishash.ttl %></dd></pre></label></dt>
  </dl>
</fieldset>

<div class="form-actions">
  <%= link_to 'Back', redishashes_path, :class => 'btn'  %>
  <%= link_to 'Edit', edit_redishash_path(@redishash), :class => 'btn' %>
  <%= link_to 'Delete', redishash_path(@redishash), :method => 'delete', :confirm => 'Are you sure?', :class => 'btn btn-danger' %>
</div>
