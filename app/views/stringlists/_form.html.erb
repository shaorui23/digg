<%= form_for @stringlist, :html => { :class => 'form-horizontal' } do |f| %>
  <fieldset>
    <legend><%= controller.action_name.capitalize %> Redis String</legend>

    <div class="control-group">
      <%= f.label "Type", :class => 'control-label' %>
      <div class="controls">
        <select class="span2">
          <option>String</option>
          <option>Set</option>
          <option>List</option>
        </select>
      </div>
    </div>

    <div class="control-group">
      <%= f.label "Key", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :name, :class => 'text_field' %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label "Value", :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :redis_value, :class => 'text_field' %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to 'Cancel', stringlists_path, :class => 'btn' %>
    </div>
  </fieldset>
<% end %>
