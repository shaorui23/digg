<h1>Redis String</h1>

<form class="navbar-search pull-right"><div style="margin:0;padding:0;display:inline"><input name="utf8" type="hidden" value="&#x2713;" /></div>
  <div class="well">
  <span id='filters_box'></span>
  <hr class='filters_box' style='display:none'>
  <input type="search" name="query" class="input-small" placeholder="Search.."><button style="margin-bottom:8px;" class="btn btn-primary" data-disable-with="<i class='icon-white icon-refresh'></i> Refresh" type="submit"><i class="icon-white icon-refresh"></i>Click</button>
  </div>
</form>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Key</th>
      <th>Value</th>
      <th>type</th>
      <th>TTL</th>
      <th>Created at</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @stringlists.each do |stringlist| %>
      <tr>
        <td><%= link_to stringlist.redis_key, stringlist_path(stringlist) %></td>
        <td><%= stringlist.redis_value %></td>
        <td><%= stringlist.redis_type %></td>
        <td><%= stringlist.ttl %></td>
        <td><%= time_ago_in_words stringlist.created_at %></td>
        <td>
          <%= link_to 'Edit', edit_stringlist_path(stringlist), :class => 'btn btn-mini' %>
          <%= link_to 'Destroy', stringlist_path(stringlist), :method => :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @stringlists, :theme => 'boot' %>

<%= link_to 'New', new_stringlist_path, :class => 'btn btn-primary' %>
